{
    "name": "ivupcn/restina",
    "description": "A lightweight PHP framework based on Slim and Eloquent ORM",
    "type": "library",
    "keywords": ["framework", "api", "rest", "slim", "eloquent", "orm"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "ivup.cn",
            "email": "ivup@ivup.cn",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/ivupcn/restina-framework",
    "support": {
        "issues": "https://github.com/ivupcn/restina-framework/issues",
        "source": "https://github.com/ivupcn/restina-framework"
    },
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.15",
        "slim/psr7": "^1.8",
        "php-di/php-di": "^7.1",
        "php-di/slim-bridge": "^3.4",
        "illuminate/database": "^12.49",
        "illuminate/events": "^12.49"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Restina\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}