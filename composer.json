{
    "name": "ivupcn/restina",
    "description": "A lightweight PHP framework based on Slim and Eloquent ORM",
    "type": "library",
    "keywords": ["framework", "api", "rest", "slim", "eloquent", "orm"],
    "license": "MIT",
    "authors": [
        {
            "name": "ivup",
            "email": "ivup@ivup.cn",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/ivupcn/restina",
    "support": {
        "issues": "https://github.com/ivupcn/restina/issues",
        "source": "https://github.com/ivupcn/restina"
    },
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.10",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "illuminate/database": "^9.0|^10.0",
        "illuminate/events": "^9.0|^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Restina\\": "restina/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}